<div class="fixed-top">
<%= render 'shared/navbarsecondary' %>
</div>

<div class="challenges-cards">
  <% @user_challenges.each do |user_challenge| %>
  <div class="card-challenge">
    <div class="d-flex justify-content-between">
    <h1><%= link_to user_challenge.challenge.name, challenge_path(user_challenge.challenge) %></h1>
    <%= link_to drop_user_challenge_path(user_challenge), method: :patch, data: { confirm: "You sure?"}  do %>
      <i class="fas fa-trash"></i>
    <% end %>
    </div>
    <div class="card-info">
      <h2 class="label label-alim"><%= user_challenge.challenge.category %></h2>
      <%= render 'shared/difficulty', level: user_challenge.challenge.difficulty %>
    </div>
  </div>
    <% end %>
</div>
<% if @user_challenges.count == 5  %>
  <div class="row justify-content-center">
    <button class="button-add-inactive">
      <i class="fas fa-plus"></i>
    </button>
  </div>
<% else  %>
  <div class="row justify-content-center">
      <%= link_to user_challenges_path, class: "button button-add", :method => :post do %>
      <i class="fas fa-plus"></i>
      <% end %>
  </div>
<% end %>
